<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.natsufumij.blacksky.mapper.BoardWordMapper">
    <!--
        int post(board_word board_word);
    board_word get(Long id);
    List<board_word> fetchNewest();
    int delete(Long id);
    -->

    <insert id="post" keyProperty="id" useGeneratedKeys="true">
        insert into board_word(email,title,content) values
        (#{email},#{title},#{content})
    </insert>

    <select id="get" resultType="com.natsufumij.blacksky.domain.BoardWord">
        select id,email,
        title,left_time,content
        from board_word
        where id=#{id}
    </select>

    <select id="fetchNewest" resultType="com.natsufumij.blacksky.domain.BoardWord">
        select id,email,
        title,left_time,content
        from board_word order by id desc limit 10
    </select>

    <delete id="delete">
        delete board_word
        where id=#{id}
    </delete>
</mapper>